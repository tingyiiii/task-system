<% if task.errors.any? %>
  <% task.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<%= form_for(task) do |form| %>
  <%= form.label :title, I18n.t("tasks.table.title") %>
  <%= form.text_field :title %>

  <%= form.label :description, I18n.t("tasks.table.description") %>
  <%= form.text_field :description %>

  <%= form.submit %>
<% end %>