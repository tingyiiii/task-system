<h1>任務列表</h1>
<%= link_to "新增任務", new_task_path %>

<table>
  <thead>
    <tr>
      <th>任務名稱</th>
      <th>任務內容</th>
    </tr>
  </thead>
  <tbody>
  <% @tasks.each do |task| %>
    <tr>
      <td><%= link_to task.title, task %></td>
      <td><%= task.description %></td>
    </tr>
  <% end %>
  </tbody>
</table>