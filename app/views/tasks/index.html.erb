<h1><%= I18n.t("tasks.heading.index") %></h1>
<%= link_to I18n.t("tasks.link.create_a_new_task"), new_task_path %>

<table>
  <thead>
    <tr>
      <th><%= I18n.t("tasks.table.title") %></th>
      <th><%= I18n.t("tasks.table.description") %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @tasks.each do |task| %>
    <tr>
      <td><%= link_to task.title, task %></td>
      <td><%= task.description %></td>
      <td><%= link_to I18n.t("link.edit"), edit_task_path(task) %></td>
      <td><%= link_to I18n.t("link.delete"), task, method: :delete, data: { confirm: "#{I18n.t("are_you_sure")}" } %></td>
    </tr>
  <% end %>
  </tbody>
</table>