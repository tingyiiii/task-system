<h1>任務列表</h1>
<%= link_to "新增任務", new_task_path %>

<table>
  <thead>
    <tr>
      <th>任務名稱</th>
      <th>任務內容</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @tasks.each do |task| %>
    <tr>
      <td><%= link_to task.title, task %></td>
      <td><%= task.description %></td>
      <td><%= link_to "編輯", edit_task_path(task) %></td>
      <td><%= link_to "刪除", task, method: :delete, data: { confirm: "確定要刪除#{task.title}任務嗎?"} %></td>
    </tr>
  <% end %>
  </tbody>
</table>